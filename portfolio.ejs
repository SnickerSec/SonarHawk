<!DOCTYPE html>
<html lang="en" class="<%= lightTheme ? 'light' : 'dark' %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= portfolioName %> - Security Portfolio Report</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js" integrity="sha512-w3u3BtX5h2Qscdw3DcQmqvDjFLnKdNqzPgvhFhOYuW0LnxzbSNlbP6jkWpkzhyE6hQAGPKtJx2e4hMvVrH8L4w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <style>
      /* Theme Variables */
      :root {
        --bg-color: #f7f7f7;
        --text-color: #333;
        --section-bg: #fff;
        --border-color: #e0e0e0;
        --hover-bg: #f1faff;
        --header-border: #007bff;
        --th-bg: #f7f7f7;
        --even-row-bg: #fafafa;
        --shadow-color: rgba(0, 0, 0, 0.1);
        --link-color: #0066cc;
        --link-hover-color: #0056b3;
        --success-color: #4caf50;
        --warning-color: #f0ad4e;
        --danger-color: #d9534f;
      }

      .dark {
        --bg-color: #1a1a1a;
        --text-color: #e0e0e0;
        --section-bg: #2d2d2d;
        --border-color: #404040;
        --hover-bg: #3d3d3d;
        --header-border: #3b82f6;
        --th-bg: #363636;
        --even-row-bg: #333333;
        --shadow-color: rgba(0, 0, 0, 0.3);
        --link-color: #66b3ff;
        --link-hover-color: #99ccff;
      }

      body {
        font-family: Arial, sans-serif;
        color: var(--text-color);
        margin: 0;
        padding: 20px;
        background-color: var(--bg-color);
      }

      .container {
        max-width: 1400px;
        margin: auto;
      }

      h1 {
        color: var(--text-color);
        font-size: 32px;
        margin-bottom: 10px;
      }

      h2 {
        color: var(--text-color);
        font-size: 24px;
        margin-top: 30px;
        padding-bottom: 5px;
        border-bottom: 3px solid var(--header-border);
      }

      h3 {
        color: var(--text-color);
        font-size: 20px;
        margin-top: 20px;
      }

      .section {
        background-color: var(--section-bg);
        padding: 25px;
        margin-bottom: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 8px var(--shadow-color);
        border: 1px solid var(--border-color);
      }

      .portfolio-header {
        position: relative;
        text-align: center;
        padding-bottom: 20px;
      }

      .export-button {
        position: absolute;
        top: 20px;
        right: 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px 24px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(0,123,255,0.3);
        transition: all 0.2s ease;
      }

      .export-button:hover {
        background-color: #0056b3;
        box-shadow: 0 4px 8px rgba(0,123,255,0.4);
        transform: translateY(-1px);
      }

      .export-button::before {
        content: "üìÑ ";
      }

      /* Aggregate Summary Cards */
      .summary-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
      }

      .summary-card {
        background-color: var(--section-bg);
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid;
        box-shadow: 0 2px 4px var(--shadow-color);
      }

      .summary-card.high {
        border-left-color: var(--danger-color);
      }

      .summary-card.medium {
        border-left-color: var(--warning-color);
      }

      .summary-card.low {
        border-left-color: var(--success-color);
      }

      .summary-card.info {
        border-left-color: var(--header-border);
      }

      .summary-card h3 {
        margin: 0 0 10px 0;
        font-size: 14px;
        text-transform: uppercase;
        color: var(--text-color);
        opacity: 0.8;
      }

      .summary-card .value {
        font-size: 36px;
        font-weight: bold;
        color: var(--text-color);
      }

      /* Project Grid */
      .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        margin-top: 20px;
      }

      .project-card {
        background-color: var(--section-bg);
        padding: 20px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        box-shadow: 0 2px 4px var(--shadow-color);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }

      .project-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px var(--shadow-color);
      }

      .project-card h3 {
        margin-top: 0;
        color: var(--text-color);
        font-size: 18px;
        border-bottom: 2px solid var(--header-border);
        padding-bottom: 10px;
      }

      .project-metrics {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
        margin-top: 15px;
      }

      .metric {
        text-align: center;
      }

      .metric-label {
        font-size: 12px;
        text-transform: uppercase;
        color: var(--text-color);
        opacity: 0.7;
        margin-bottom: 5px;
      }

      .metric-value {
        font-size: 24px;
        font-weight: bold;
      }

      .metric-value.high {
        color: var(--danger-color);
      }

      .metric-value.medium {
        color: var(--warning-color);
      }

      .metric-value.low {
        color: var(--success-color);
      }

      .quality-gate {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 12px;
        text-transform: uppercase;
      }

      .quality-gate.passed {
        background-color: var(--success-color);
        color: white;
      }

      .quality-gate.failed {
        background-color: var(--danger-color);
        color: white;
      }

      .quality-gate.na {
        background-color: #999;
        color: white;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        border: 1px solid var(--border-color);
      }

      th, td {
        padding: 12px 8px;
        border-bottom: 1px solid var(--border-color);
        text-align: left;
        font-size: 14px;
      }

      th {
        background-color: var(--th-bg);
        font-weight: bold;
        color: var(--text-color);
      }

      tr:nth-child(even) {
        background-color: var(--even-row-bg);
      }

      tr:hover {
        background-color: var(--hover-bg);
      }

      .error-message {
        color: var(--danger-color);
        font-style: italic;
        padding: 10px;
        background-color: rgba(217, 83, 79, 0.1);
        border-radius: 4px;
        margin-top: 10px;
      }

      /* Chart Container */
      .chart-container {
        position: relative;
        height: 300px;
        margin: 20px 0;
      }

      @media print {
        .export-button {
          display: none;
        }
        .dark {
          --bg-color: #ffffff;
          --text-color: #000000;
          --section-bg: #ffffff;
          --border-color: #cccccc;
          --th-bg: #f0f0f0;
          --even-row-bg: #fafafa;
        }
      }

      a {
        color: var(--link-color);
        text-decoration: none;
      }

      a:hover {
        color: var(--link-hover-color);
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <!-- Portfolio Header -->
      <div class="section portfolio-header">
        <button class="export-button" onclick="exportToPDF()">Export to PDF</button>
        <h1>üè¢ <%= portfolioName %></h1>
        <p style="color: var(--text-color); opacity: 0.8; font-size: 16px;">
          Security Portfolio Report ‚Ä¢ Generated on <%= date %>
        </p>
        <p style="color: var(--text-color); opacity: 0.7;">
          <%= totalProjects %> Projects Analyzed
        </p>
      </div>

      <!-- Aggregate Summary Cards -->
      <div class="summary-cards">
        <div class="summary-card high">
          <h3>High Severity</h3>
          <div class="value"><%= aggregateSummary.high %></div>
        </div>
        <div class="summary-card medium">
          <h3>Medium Severity</h3>
          <div class="value"><%= aggregateSummary.medium %></div>
        </div>
        <div class="summary-card low">
          <h3>Low Severity</h3>
          <div class="value"><%= aggregateSummary.low %></div>
        </div>
        <div class="summary-card info">
          <h3>Total Issues</h3>
          <div class="value"><%= aggregateSummary.totalIssues %></div>
        </div>
        <div class="summary-card info">
          <h3>Avg Coverage</h3>
          <div class="value"><%= aggregateSummary.avgCoverage.toFixed(1) %>%</div>
        </div>
        <div class="summary-card info">
          <h3>Quality Gates</h3>
          <div class="value" style="font-size: 24px;">
            <span style="color: var(--success-color);"><%= aggregateSummary.qualityGatesPassed %> ‚úì</span>
            /
            <span style="color: var(--danger-color);"><%= aggregateSummary.qualityGatesFailed %> ‚úó</span>
          </div>
        </div>
      </div>

      <!-- Project Comparison Chart -->
      <div class="section">
        <h2>üìä Project Comparison</h2>
        <div class="chart-container">
          <canvas id="projectChart"></canvas>
        </div>
      </div>

      <!-- Project Cards Grid -->
      <div class="section">
        <h2>üîç Project Details</h2>
        <div class="project-grid">
          <% projects.forEach(project => { %>
          <div class="project-card">
            <h3><%= project.name %></h3>
            <p style="font-size: 12px; color: var(--text-color); opacity: 0.6; margin: 5px 0;">
              <a href="<%= sonarBaseURL %>/dashboard?id=<%= project.component %>" target="_blank">
                <%= project.component %>
              </a>
            </p>

            <% if (project.error) { %>
            <div class="error-message">
              ‚ö†Ô∏è <%= project.error %>
            </div>
            <% } else { %>

            <div class="project-metrics">
              <div class="metric">
                <div class="metric-label">High</div>
                <div class="metric-value high"><%= project.summary.high %></div>
              </div>
              <div class="metric">
                <div class="metric-label">Medium</div>
                <div class="metric-value medium"><%= project.summary.medium %></div>
              </div>
              <div class="metric">
                <div class="metric-label">Low</div>
                <div class="metric-value low"><%= project.summary.low %></div>
              </div>
              <div class="metric">
                <div class="metric-label">Total</div>
                <div class="metric-value"><%= project.summary.total %></div>
              </div>
            </div>

            <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid var(--border-color);">
              <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                <span style="font-size: 12px; opacity: 0.7;">Quality Gate:</span>
                <span class="quality-gate <%= project.qualityGateStatus === 'OK' ? 'passed' : project.qualityGateStatus === 'ERROR' ? 'failed' : 'na' %>">
                  <%= project.qualityGateStatus %>
                </span>
              </div>
              <div style="display: flex; justify-content: space-between; align-items: center;">
                <span style="font-size: 12px; opacity: 0.7;">Coverage:</span>
                <span style="font-weight: bold;"><%= project.coverage %>%</span>
              </div>
            </div>

            <% } %>
          </div>
          <% }) %>
        </div>
      </div>

      <!-- Detailed Table -->
      <div class="section">
        <h2>üìã All Projects Summary</h2>
        <table>
          <thead>
            <tr>
              <th>Project</th>
              <th style="text-align: center;">High</th>
              <th style="text-align: center;">Medium</th>
              <th style="text-align: center;">Low</th>
              <th style="text-align: center;">Total</th>
              <th style="text-align: center;">Coverage</th>
              <th style="text-align: center;">Quality Gate</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(project => { %>
            <tr>
              <td>
                <strong><%= project.name %></strong><br>
                <span style="font-size: 11px; opacity: 0.6;"><%= project.component %></span>
              </td>
              <td style="text-align: center; color: var(--danger-color); font-weight: bold;">
                <%= project.summary.high %>
              </td>
              <td style="text-align: center; color: var(--warning-color); font-weight: bold;">
                <%= project.summary.medium %>
              </td>
              <td style="text-align: center; color: var(--success-color); font-weight: bold;">
                <%= project.summary.low %>
              </td>
              <td style="text-align: center; font-weight: bold;">
                <%= project.summary.total %>
              </td>
              <td style="text-align: center;">
                <%= project.coverage %>%
              </td>
              <td style="text-align: center;">
                <span class="quality-gate <%= project.qualityGateStatus === 'OK' ? 'passed' : project.qualityGateStatus === 'ERROR' ? 'failed' : 'na' %>">
                  <%= project.qualityGateStatus %>
                </span>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script>
      // Initialize Chart
      const ctx = document.getElementById('projectChart');
      const isDark = document.documentElement.classList.contains('dark');

      const projectNames = <%= JSON.stringify(projects.map(p => p.name)) %>;
      const highData = <%= JSON.stringify(projects.map(p => p.summary.high)) %>;
      const mediumData = <%= JSON.stringify(projects.map(p => p.summary.medium)) %>;
      const lowData = <%= JSON.stringify(projects.map(p => p.summary.low)) %>;

      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: projectNames,
          datasets: [
            {
              label: 'High',
              data: highData,
              backgroundColor: 'rgba(217, 83, 79, 0.8)',
              borderColor: 'rgb(217, 83, 79)',
              borderWidth: 1
            },
            {
              label: 'Medium',
              data: mediumData,
              backgroundColor: 'rgba(240, 173, 78, 0.8)',
              borderColor: 'rgb(240, 173, 78)',
              borderWidth: 1
            },
            {
              label: 'Low',
              data: lowData,
              backgroundColor: 'rgba(76, 192, 80, 0.8)',
              borderColor: 'rgb(76, 192, 80)',
              borderWidth: 1
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            x: {
              stacked: true,
              ticks: {
                color: isDark ? '#e0e0e0' : '#333'
              },
              grid: {
                color: isDark ? 'rgba(255,255,255,0.1)' : 'rgba(0,0,0,0.1)'
              }
            },
            y: {
              stacked: true,
              beginAtZero: true,
              ticks: {
                color: isDark ? '#e0e0e0' : '#333'
              },
              grid: {
                color: isDark ? 'rgba(255,255,255,0.1)' : 'rgba(0,0,0,0.1)'
              }
            }
          },
          plugins: {
            legend: {
              labels: {
                color: isDark ? '#e0e0e0' : '#333'
              }
            },
            title: {
              display: true,
              text: 'Vulnerability Distribution by Project',
              color: isDark ? '#e0e0e0' : '#333',
              font: {
                size: 16
              }
            }
          }
        }
      });

      // PDF Export Function
      function exportToPDF() {
        const button = document.querySelector('.export-button');
        const originalText = button.textContent;
        button.textContent = '‚è≥ Generating PDF...';
        button.disabled = true;

        const element = document.querySelector(".container");
        const portfolioName = '<%= portfolioName %>'.replace(/[^a-z0-9]/gi, '_');
        const date = new Date().toISOString().split('T')[0];
        const filename = `${portfolioName}_Portfolio_${date}.pdf`;

        const options = {
          margin: [0.5, 0.5, 0.5, 0.5],
          filename: filename,
          image: { type: 'jpeg', quality: 0.98 },
          html2canvas: {
            scale: 2,
            useCORS: true,
            letterRendering: true,
            logging: false
          },
          jsPDF: {
            unit: 'in',
            format: 'a4',
            orientation: 'portrait',
            compress: true
          },
          pagebreak: {
            mode: ['avoid-all', 'css', 'legacy'],
            before: '.section'
          }
        };

        html2pdf()
          .set(options)
          .from(element)
          .save()
          .then(() => {
            button.textContent = originalText;
            button.disabled = false;
          })
          .catch((error) => {
            console.error('PDF generation failed:', error);
            button.textContent = '‚ùå Export Failed';
            setTimeout(() => {
              button.textContent = originalText;
              button.disabled = false;
            }, 2000);
          });
      }

      // Keyboard shortcut
      document.addEventListener('keydown', function(e) {
        if ((e.ctrlKey || e.metaKey) && e.key === 'p') {
          e.preventDefault();
          exportToPDF();
        }
      });
    </script>
  </body>
</html>
