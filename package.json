{
  "name": "codeguard",
  "version": "1.1.2",
  "description": "SonarQube reporting tool with enhanced features and dark mode",
  "main": "src/index.js",
  "author": "SnickerSec",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/snickersec/codeguard.git"
  },
  "keywords": [
    "sonar",
    "report",
    "security",
    "dark-theme",
    "pdf-export",
    "vulnerability"
  ],
  "bin": {
    "codeguard": "src/cli.js"
  },
  "exports": "./src/index.js",
  "scripts": {
    "build": "npm run build --workspace=web",
    "test": "mocha test/**/*.test.js",
    "test:watch": "mocha test/**/*.test.js --watch",
    "test:coverage": "nyc --reporter=html --reporter=text mocha test/**/*.test.js",
    "test:coverage:ci": "nyc --no-check-coverage --reporter=html --reporter=text --reporter=lcov mocha test/**/*.test.js",
    "test:lcov": "nyc --reporter=lcov mocha test/**/*.test.js",
    "version": "npm run changelog && git add docs/CHANGELOG.md",
    "changelog": "conventional-changelog -p angular -i docs/CHANGELOG.md -s"
  },
  "type": "module",
  "private": true,
  "workspaces": [
    "web"
  ],
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "axios": "^1.13.2",
    "bottleneck": "^2.19.5",
    "commander": "^14.0.2",
    "ejs": "^3.1.10",
    "got": "^14.6.5",
    "hpagent": "^1.2.0",
    "properties-file": "^3.6.3",
    "proxy-from-env": "^1.1.0",
    "quick-lru": "^7.3.0",
    "safe-regex": "^2.1.1",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "chai": "^6.2.1",
    "conventional-changelog-cli": "^5.0.0",
    "mocha": "^11.7.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^14.0.0",
    "nyc": "^17.1.0",
    "sinon": "^21.0.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.4"
  },
  "overrides": {
    "@conventional-changelog/git-client": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14"
  }
}
