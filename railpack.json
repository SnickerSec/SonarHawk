{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "install": {
      "commands": [
        "npm install --include=dev --include=optional --legacy-peer-deps"
      ]
    },
    "build": {
      "inputs": [
        { "step": "install" }
      ],
      "commands": [
        "npm run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "cd web && NODE_ENV=production node server.js"
  }
}
