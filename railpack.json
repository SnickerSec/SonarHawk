{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "caches": {
    "npm-cache": {
      "directory": "/root/.npm",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "npm install --include=dev --include=optional"
      ],
      "caches": ["npm-cache"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "npm run build"
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "startCommand": "cd web && NODE_ENV=production node server.js",
    "inputs": [
      { "step": "build", "include": ["."] }
    ]
  }
}
